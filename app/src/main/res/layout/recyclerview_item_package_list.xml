<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_package_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/numberPicker_quantity"
        android:layout_toStartOf="@+id/numberPicker_quantity" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker_quantity"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_item_delete"
        android:layout_toStartOf="@+id/btn_item_delete"
        android:layout_alignBottom="@+id/et_package_list" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_item_delete"
        android:layout_alignBottom="@+id/numberPicker_quantity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_delete" />

</RelativeLayout>